---
import site from '../data/site.json';
---

<footer class="bg-gray-100 text-sm text-gray-600 py-6 mt-12">
  <div class="max-w-6xl mx-auto px-4 flex justify-between flex-wrap gap-4">
    <p>&copy; {new Date().getFullYear()} {site.siteName}</p>
    <div class="flex gap-6">
      {site.footerLinks.filter(link => link.enabled).map(link => (
        <a href={link.href} class="hover:underline">{link.label}</a>
      ))}
    </div>
  </div>
</footer>