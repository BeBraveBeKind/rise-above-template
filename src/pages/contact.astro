---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Contact | Rise Above</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
  </head>
  <body class="font-sans text-gray-800">
    <Header />
    <main class="max-w-2xl mx-auto px-4 py-12">
      <h1 class="text-3xl font-semibold mb-6">Let's Connect</h1>
      <form name="contact" method="POST" netlify class="grid gap-4">
        <input type="hidden" name="form-name" value="contact" />
        <input type="text" name="fullName" placeholder="Full Name" required class="p-2 border rounded" />
        <input type="email" name="email" placeholder="Email" required class="p-2 border rounded" />
        <input type="text" name="businessName" placeholder="Business Name (optional)" class="p-2 border rounded" />
        <input type="text" name="website" placeholder="Website (optional)" class="p-2 border rounded" />
        <textarea name="message" placeholder="How can I help you?" required class="p-2 border rounded h-32"></textarea>
        <button type="submit" class="bg-brandBlue text-white py-2 px-4 rounded">Send</button>
      </form>
    </main>
    <Footer />
  </body>
</html>