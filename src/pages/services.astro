---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import services from '~/data/services.json';
---

<html>
  <body class="font-sans text-gray-800">
    <Header />
    <main class="max-w-4xl mx-auto px-4 py-12">
      <h1 class="text-3xl font-semibold mb-6">Our Services</h1>
      <div class="grid gap-6">
        {services.sort((a, b) => a.order - b.order).map(service => (
          <div class="border p-4 rounded-lg">
            <img src={service.image} alt={service.title} class="w-full h-48 object-cover mb-2" />
            <h2 class="text-xl font-semibold">{service.title}</h2>
            <p>{service.description}</p>
          </div>
        ))}
      </div>
    </main>
    <Footer />
  </body>
</html>