---
import site from '../data/site.json';
import services from '../data/services.json';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Services | {site.siteName}</title>
  </head>
  <body>
    <section class="py-16 text-center">
      <h1 class="text-4xl mb-6">Our Services</h1>
      <p class="text-lg max-w-2xl mx-auto mb-8">Explore what we offer to help your brand rise above.</p>

      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 max-w-6xl mx-auto px-4">
        {services.map((service) => (
          <div class="bg-white rounded-md shadow-md p-6">
            <h3 class="text-xl font-semibold mb-2">{service.title}</h3>
            <p class="text-gray-600 text-sm">{service.description}</p>
          </div>
        ))}
      </div>
    </section>
  </body>
</html>