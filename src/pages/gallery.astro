---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html>
  <body class="font-sans text-gray-800">
    <Header />
    <main class="max-w-4xl mx-auto px-4 py-12">
      <h1 class="text-3xl font-semibold mb-6">Gallery</h1>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <img src="/images/sample1.jpg" alt="Sample 1" class="rounded shadow" />
        <img src="/images/sample2.jpg" alt="Sample 2" class="rounded shadow" />
        <img src="/images/sample3.jpg" alt="Sample 3" class="rounded shadow" />
      </div>
    </main>
    <Footer />
  </body>
</html>